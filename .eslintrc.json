{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "standard"
  ],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "prefer-template": [
      "error"
    ],
    "no-useless-concat": [
      "error"
    ],
    "indent": [
      "error",
      4
    ],
    "space-before-function-paren": [
      0
    ],
    "semi": [
      "error",
      "always"
    ]
  }
}
